<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="demokhoaluan.com.khoaluan.dangki">

    <include layout="@layout/app_bar"
        android:id="@+id/app_bar"></include>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_account_grey600_24dp"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/app_bar"
        android:layout_toLeftOf="@+id/etUser"
        android:layout_marginRight="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="username"
        android:ems="10"
        android:id="@+id/etUser"
        android:layout_alignBottom="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_lock_grey600_24dp"
        android:id="@+id/imageView2"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/etUser"
        android:layout_alignRight="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="password"
        android:ems="10"
        android:id="@+id/etPass"
        android:layout_alignTop="@+id/imageView2"
        android:layout_alignLeft="@+id/etUser" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/ic_action_phone"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/imageView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="phone number"
        android:ems="10"
        android:id="@+id/etPhone"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignLeft="@+id/etPass" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/ic_action_place"
        android:layout_below="@+id/etPhone"
        android:layout_alignLeft="@+id/imageView3"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Địa Chỉ"
        android:id="@+id/etAddress"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignLeft="@+id/etPhone"
        android:layout_alignRight="@+id/etPhone" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:id="@+id/etEmail"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/etAddress"
        android:layout_alignLeft="@+id/etAddress"
        android:layout_alignRight="@+id/etAddress" />

    <Button
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="Đăng Kí"
        android:textColor="@color/primaryColor"
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/bSign"
        android:layout_marginBottom="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
