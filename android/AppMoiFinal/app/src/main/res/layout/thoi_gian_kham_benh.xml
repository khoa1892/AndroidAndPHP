<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="demokhoaluan.com.khoaluan.Thoigiantaikham">

    <include layout="@layout/app_bar"
        android:id="@+id/app_bar"></include>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="190dp"
        android:src="@drawable/deadline"
        android:layout_below="@+id/app_bar"
        android:id="@+id/imageView"
        android:scaleType="centerCrop" />
    <LinearLayout
        android:layout_below="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="5"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.CardView
            android:id="@+id/reminder"
            android:layout_weight="2.5"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/reminder"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:text="Thời gian khám bệnh"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/join"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="2.5"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:foreground="?android:attr/selectableItemBackground">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/join"/>
                <TextView
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:text="Đăng kí Khám bệnh"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>



    </LinearLayout>


</RelativeLayout>

